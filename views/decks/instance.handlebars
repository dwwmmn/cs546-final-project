<section>
    <div id="deckTitle">
        <h2>{{deck.name}}</h2>
        <dl>
            <dt>Owner: </dt>
            <dd>{{ownerName}}</dd>
            <dt>Description: </dt>
            <dd>{{deck.description}}</dd>
            <dt>Rating: </dt>
            <dd>{{deck.rating}}</dd>
        </dl>
    </div>
    <div id="cards">
        <ol>
            {{#each deck.cards}}
            <li>
                <span id="card">
                    <a href="/cards/{{this._id}}/">{{this.name}}</a>    
                </span>
            </li>
        {{/each}}
        </ol>
    </div>
    {{#if userName}}
    <div id="votes">
        <form id="voteForm" method="POST">
            <input type="submit" name="action" formaction="/decks/upvote" value="Upvote" />
            <input type="submit" name="action" formaction="/decks/downvote" value="Downvote" />
        </form>
    </div>
    {{/if}}
</section>