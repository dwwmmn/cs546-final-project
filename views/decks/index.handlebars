<section id="search_form">
    <form id="search">
        <legend>Search for Decks</legend>
        <p>
            <label for="name">Deck Name: </label>
            <input name="name" id="name" value="{{searchName}}"></input>

            <!-- TODO -->
        </p>
    </form>
</section>

<section id="decks">
    <ol>
        {{#each decks}}
            <li>
                <article class="deck">
                    <p id="rating">Rating: {{this.rating}}</p>
                    <a href="/decks/{{this._id}}">{{this.name}}</a>
                    <p>{{this.description}}</p>
                </article>
            </li>
        {{/each}}
    </ol>
</section>

<section id="page_navigation">
    <nav>
        <form method="POST">
            <input name="prev" type="submit" name="action" value="Prev"></input>
            <input name="pageNumber" type="text" value="{{pageNumber}}"></input>
            <input name="goToPage" type="submit" name="action" value="Go To Page"></input>
            <input name="next" type="submit" name="action" value="Next"></input>
        </form>
    </nav>

</section>