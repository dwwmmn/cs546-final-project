<section id="signupSection">
    {{#if message}}
    <span id="error">{{message}}</span>
    {{/if}}
    <form method="POST">
        <label for="username">Username: </label>
        <input id="username" name="username" value="Enter a Username" type="text" />
        <label for="fullname">Full Name: </label>
        <input id="fullname" name="fullname" value="Enter your full name" type="text" />
        <label for="password">Password: </label>
        <input id="password" name="password" type="password" />
        <label for="repeatPassword">Repeat Password: </label>
        <input id="repeatPassword" name="repeatPassword" type="password" />
        <label for="about">About: </label>
        <input id="about" name="about" value="Describe Yourself" type="textarea" />
        <label for="email">Email: </label>
        <input id="email" name="email" value="Email" type="email" />
        <input id="submit" type="submit" />
    </form>
</section>